<resources>

    <!--=========================================================================================-->
    <!-- Tema de la Aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--.....................................................................................-->
        <!-- Colores del Tema -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/colorAccentLight</item>
    </style>

    <!--=========================================================================================-->
    <!-- Tema para el Boton -->
    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--=========================================================================================-->
    <!-- Tema para el Boton Flotante -->
    <style name="FloatingButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>
    <!--=========================================================================================-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--=========================================================================================-->
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
    <!--=========================================================================================-->
    <style name="Etiquetas">
        <item name="android:background">@drawable/background_label_fab</item>
        <item name="android:textColor">@color/colorInformationText</item>
    </style>

    <style name="analisis">Análisis</style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorEditTextBlack</item>
        <item name="android:textColorPrimary">@color/colorEditTextBlack</item>
        <item name="colorAccent">@color/colorEditTextBlack</item>
        <item name="colorControlNormal">@color/colorEditTextBlack</item>
        <item name="colorControlActivated">@color/colorEditTextBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
