<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_graficas_estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edwin.ayllu.MenuGraficasEstadisticas"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:background="?attr/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/menuMapasEstadisticos"
                android:textColor="@color/colorTextIcons"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            android:layout_weight="1"
            app:contentPadding="@dimen/button_padding"
            android:elevation="0dp"
            android:id="@+id/cardMG"
            android:layout_marginTop="@dimen/fab_elevation"
            android:layout_marginLeft="@dimen/fab_elevation"
            android:layout_marginRight="@dimen/fab_elevation"
            android:onClick="graficasGenerales">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_grafica"
                    android:id="@+id/imageView12"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_width="100dp" />

                <TextView
                    android:text="@string/mapasGenerales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView152q"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorBackgroundCardView" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/colorRadioButtonOn"
            android:layout_weight="1"

            android:id="@+id/cardME"
            android:onClick="graficasEspecificas"
            android:clickable="true"
            android:layout_margin="@dimen/fab_elevation"
            app:contentPadding="@dimen/button_padding">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_grafica"
                    android:id="@+id/imageView1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_width="100dp" />

                <TextView
                    android:text="@string/mapasEspecificos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView152"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorBackgroundCardView" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
