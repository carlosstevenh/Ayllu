<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_coordenadas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/normal_margin"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_latitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/text_view_style_negative"
            android:drawableLeft="@drawable/ic_latitud"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_latitud"
            android:gravity="center_vertical"
            android:padding="@dimen/edit_text_padding"
            android:text="@string/latitudePointDialog"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_latitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_weight="0.2"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_icon="@drawable/ic_point"
            app:fab_size="mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/normal_margin"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_longitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/text_view_style_negative"
            android:drawableLeft="@drawable/ic_longitud"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/ic_longitud"
            android:gravity="center_vertical"
            android:padding="@dimen/edit_text_padding"
            android:text="@string/lengthPointDialog"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_longitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_weight="0.2"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_icon="@drawable/ic_point"
            app:fab_size="mini" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilAltitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/normal_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etAltitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/altitudePointDialog"
            android:theme="@style/EditTextBlack"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>